# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /postSurfer                 controllers.Application.postSurfer()
GET     /newSurfer                  controllers.Application.newSurfer(slug)
GET     /surfer/:slug               controllers.Application.showSurfer(slug)
GET     /surfer/:slug/delete        controllers.Application.deleteSurfer(slug)
GET     /surfer/:slug/edit          controllers.Application.newSurfer(slug)
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Application.postLogin()
GET     /profile                    controllers.Application.profile()
GET     /logout                      controllers.Application.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
